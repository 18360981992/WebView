<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.dabao.demo.MainActivity">



    <!--用于包裹  宽一定不能小于item宽的2倍-->
    <RelativeLayout
        android:id="@+id/xuanfu_RelativeLayout"
        android:layout_width="800dp"
        android:layout_height="60dp">

        <!--这是item-->
        <LinearLayout
            android:id="@+id/item_LinearLayout"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/item_lv"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:gravity="center_vertical"
            >

            <!--内容控件只能有一个子控间-->
            <LinearLayout
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                >
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title1"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可视对讲"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    />
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="牧神记"
                    />
            </LinearLayout>


        </LinearLayout>

        <!--图片-->
        <ImageView
            android:id="@+id/iv_dv_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/details_djzk_1"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


</RelativeLayout>
